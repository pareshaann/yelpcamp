<% layout("layouts/boilerplate") %>

    <div class="container">
        <div class="row">
                <h1 class="text-center col-12">
                    Edit Campground
                </h1>
                <div class="col-6 offset-3">
                    <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                        <div class="mb-3">
                            <label class="form-label" for="name">Name</label>
                            <input class="form-control" type="text" id="name" name="campground[name]" value="<%= camp.name %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="location">Location</label>
                            <input class="form-control" type="text" id="location" name="campground[location]" value="<%= camp.location %>"> 
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="price">Price /night</label>
                            <div class="input-group">
                                <span class="input-group-text" id="price-label">&#8377;</span>
                                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" value="<%= camp.price %>">
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label" for="image">Image Url</label>
                            <input class="form-control" type="text" id="image" name="campground[image]" value="<%= camp.image %>">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" type="text" id="description" name="campground[description]"><%= camp.description %></textarea>
                        </div>
                        <div class="text-center mb-3">
                            <button class="btn btn-success">Submit</button>
                        </div>
                    </form>
                    <br>
                    <a href="/campgrounds">Go Back</a>
                </div>
        </div>
    </div>